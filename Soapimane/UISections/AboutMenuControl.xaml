<UserControl x:Class="Soapimane.Controls.AboutMenuControl"

             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:Ant="clr-namespace:AntWpf.Controls;assembly=AntWpf"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d">
    <ScrollViewer x:Name="AboutMenu"
                  VerticalScrollBarVisibility="Auto"
                  PanningMode="VerticalOnly">
        <StackPanel Margin="20">

            <!-- Hero Section -->
            <Border Background="#15FFFFFF"
                    BorderBrush="#3FFFFFFF"
                    BorderThickness="1"
                    CornerRadius="5"
                    Padding="24"
                    Margin="0,0,0,16">
                <StackPanel HorizontalAlignment="Center">
                    <!-- Free Notice -->
                    <StackPanel Orientation="Horizontal"
                                HorizontalAlignment="Center"
                                Margin="0,0,0,12">
                        <Label Content="&#xE946;"
                               FontFamily="Segoe MDL2 Assets"
                               Foreground="#80FFFFFF"
                               FontSize="12"
                               VerticalAlignment="Center"
                               Padding="0,0,4,0"/>
                        <Label Content="Soapimane is free and open source"

                               FontFamily="{StaticResource Atkinson Hyperlegible}"
                               Foreground="#80FFFFFF"
                               FontSize="11"
                               VerticalAlignment="Center"
                               Padding="0"/>
                    </StackPanel>

                    <!-- Logo -->
                    <Path x:Name="AboutSoapimaneLogo"

                          Fill="White"
                          Stretch="Fill"
                          HorizontalAlignment="Center"
                          Width="80"
                          Height="40"
                          Margin="0,0,0,12">
                        <Path.Data>
                            <PathGeometry Figures="M 18.2472,490.72756 0.18686636,472.66723 153.0173,318.84293 305.84774,165.01862 l 17.74245,17.70593 17.74244,17.70592 17.0189,-16.98112 c 9.36039,-9.33961 17.60957,-16.98112 18.33151,-16.98112 0.72194,0 69.86022,68.54563 153.64061,152.32363 l 152.32798,152.32362 -18.32581,18.45368 -18.3258,18.45368 -152.3021,-153.11064 -152.3021,-153.11063 -20.36457,20.6423 C 309.83073,233.79713 241.18587,302.86906 168.4871,375.93703 L 36.307534,508.7879 Z"
                                          FillRule="NonZero" />
                        </Path.Data>
                    </Path>

                    <!-- Title & Version -->
                    <TextBlock Text="Soapimane"

                               FontFamily="{StaticResource Atkinson Hyperlegible}"
                               FontSize="24"
                               FontWeight="Bold"
                               Foreground="White"
                               HorizontalAlignment="Center"/>
                    <TextBlock Text="Universal Second Eye"
                               FontFamily="{StaticResource Atkinson Hyperlegible}"
                               FontSize="12"
                               Foreground="#99FFFFFF"
                               HorizontalAlignment="Center"
                               Margin="0,2,0,8"/>
                    <Border x:Name="VersionBorder"
                            Background="{DynamicResource ThemeColor}"
                            CornerRadius="5"
                            Padding="12,4"
                            HorizontalAlignment="Center"
                            Cursor="Hand"
                            MouseLeftButtonUp="VersionBorder_Click">
                        <Label x:Name="AboutDesc"
                               Content="v0.0.1"

                               FontFamily="{StaticResource Atkinson Hyperlegible}"
                               FontSize="11"
                               Foreground="White"
                               Padding="0"/>
                    </Border>

                    <!-- System Specs -->
                    <Label x:Name="AboutSpecs"
                           Content="Intel I5-13400F | NVIDIA GTX 1050"
                           FontFamily="{StaticResource Atkinson Hyperlegible}"
                           Foreground="#60FFFFFF"
                           FontSize="10"
                           HorizontalAlignment="Center"
                           Margin="0,12,0,0"
                           Padding="0"/>

                    <!-- Update Button -->
                    <Ant:Button x:Name="CheckForUpdates"
                                Background="#20FFFFFF"
                                BorderBrush="Transparent"
                                BorderThickness="0"
                                Content="Check for Updates"
                                FontWeight="Normal"
                                FontSize="11"
                                Height="32"
                                materialDesign:ButtonAssist.CornerRadius="6"
                                Foreground="White"
                                Width="140"
                                Margin="0,16,0,0"
                                FontFamily="{StaticResource Atkinson Hyperlegible}"
                                EffectBrush="{DynamicResource ThemeColor}"
                                Click="CheckForUpdates_Click" />
                </StackPanel>
            </Border>

            <!-- Core Team Section -->
            <Border Background="#10FFFFFF"
                    BorderBrush="#3FFFFFFF"
                    BorderThickness="1"
                    CornerRadius="5"
                    Padding="20"
                    Margin="0,0,0,12">
                <StackPanel>
                    <TextBlock Text="CORE TEAM"
                               FontFamily="{StaticResource Atkinson Hyperlegible}"
                               FontSize="10"
                               FontWeight="Bold"
                               Foreground="#60FFFFFF"
                               Margin="0,0,0,16"
                               HorizontalAlignment="Center"/>

                    <!-- Developers Container - populated from code -->
                    <UniformGrid x:Name="CoreTeamPanel"
                                 Columns="3"
                                 HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>

            <!-- Key Contributors Section -->
            <Border Background="#10FFFFFF"
                    BorderBrush="#3FFFFFFF"
                    BorderThickness="1"
                    CornerRadius="5"
                    Padding="20"
                    Margin="0,0,0,12">
                <StackPanel>
                    <TextBlock Text="KEY CONTRIBUTORS"
                               FontFamily="{StaticResource Atkinson Hyperlegible}"
                               FontSize="10"
                               FontWeight="Bold"
                               Foreground="#60FFFFFF"
                               Margin="0,0,0,12"
                               HorizontalAlignment="Center"/>

                    <!-- Highlighted Contributors - populated from code -->
                    <WrapPanel x:Name="HighlightedContributorsPanel"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,8"/>

                    <!-- Other Contributors - populated from code -->
                    <WrapPanel x:Name="ContributorsPanel"
                               HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>

            <!-- Community Section -->
            <Border Background="#08FFFFFF"
                    BorderBrush="#3FFFFFFF"
                    BorderThickness="1"
                    CornerRadius="5"
                    Padding="16"
                    Margin="0,0,0,12">
                <StackPanel HorizontalAlignment="Center">
                    <TextBlock Text="And the entire Soapimane community"

                               FontFamily="{StaticResource Atkinson Hyperlegible}"
                               FontSize="11"
                               Foreground="#70FFFFFF"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,4"/>
                    <TextBlock Text="Thank you for your support!"
                               FontFamily="{StaticResource Atkinson Hyperlegible}"
                               FontSize="10"
                               Foreground="#50FFFFFF"
                               HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>

            <!-- GitHub Link -->
            <Ant:Button x:Name="GitHubButton"
                        Background="#15FFFFFF"
                        BorderBrush="Transparent"
                        BorderThickness="0"
                        FontWeight="Normal"
                        FontSize="11"
                        Height="36"
                        materialDesign:ButtonAssist.CornerRadius="8"
                        Foreground="#AAFFFFFF"
                        HorizontalAlignment="Stretch"
                        Margin="0,0,0,8"
                        FontFamily="{StaticResource Atkinson Hyperlegible}"
                        EffectBrush="{DynamicResource ThemeColor}"
                        Click="GitHubButton_Click">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="&#xE774;"
                               FontFamily="Segoe MDL2 Assets"
                               FontSize="14"
                               VerticalAlignment="Center"
                               Margin="0,0,8,0"/>
                    <TextBlock Text="View on GitHub"
                               VerticalAlignment="Center"/>
                </StackPanel>
            </Ant:Button>

            <!-- Discord Link -->
            <Ant:Button x:Name="DiscordButton"
                        Background="#5865F2"
                        BorderBrush="Transparent"
                        BorderThickness="0"
                        FontWeight="Normal"
                        FontSize="11"
                        Height="36"
                        materialDesign:ButtonAssist.CornerRadius="8"
                        Foreground="White"
                        HorizontalAlignment="Stretch"
                        FontFamily="{StaticResource Atkinson Hyperlegible}"
                        EffectBrush="#7289DA"
                        Click="DiscordButton_Click">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="&#xE8BD;"
                               FontFamily="Segoe MDL2 Assets"
                               FontSize="14"
                               VerticalAlignment="Center"
                               Margin="0,0,8,0"/>
                    <TextBlock Text="Join our Discord"
                               VerticalAlignment="Center"/>
                </StackPanel>
            </Ant:Button>

        </StackPanel>
    </ScrollViewer>
</UserControl>
